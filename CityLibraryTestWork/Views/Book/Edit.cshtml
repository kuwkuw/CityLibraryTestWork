@model CityLibraryTestWork.Models.Book

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    <div class="form-horizontal">
        @Html.AntiForgeryToken()

        @Html.Partial("_EditBookPartial", Model)

        @Html.Partial("_EditAutorPartial", Model.Autor)

        @Html.Partial("_EditSeriePartial", Model.Serie)

        @Html.Partial("_EditPublisherPartial", Model.Publisher)

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default"/>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
