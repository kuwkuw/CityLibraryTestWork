@model IEnumerable<CityLibraryTestWork.Models.Autor>

@{
    ViewBag.Title = "Index";
}

<h2>Autors</h2>
@Html.Partial("_SearchPartial")
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SecondName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @item.FirstName
        </td>
        <td>
            @item.SecondName
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.AutorId }) |
            @Html.ActionLink("Details", "Details", new { id=item.AutorId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.AutorId })
        </td>
    </tr>
}

</table>
